# Yokaizen AI Labs Backend - Production Configuration
# Copy this file to .env and fill in your actual values
NODE_ENV=production
PORT=7792
API_VERSION=v1

# Database - Shared with Yokaizen Campus
DATABASE_URL=postgresql://USERNAME:PASSWORD@localhost:5432/yokaizen_campus
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=yokaizen_campus
DATABASE_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-jwt-secret-replace-me
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-replace-me
JWT_REFRESH_EXPIRES_IN=30d

# Firebase - Shared with Yokaizen Campus
FIREBASE_PROJECT_ID=yokaizen-campus
FIREBASE_CREDENTIALS_PATH=./firebase-admin.json
FIREBASE_STORAGE_BUCKET=yokaizen-campus.firebasestorage.app

# Google AI / Gemini
GOOGLE_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=yokaizen-campus
GEMINI_MODEL=gemini-1.5-pro
GEMINI_FLASH_MODEL=gemini-1.5-flash
IMAGEN_MODEL=imagen-3.0-generate-001

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Anthropic / Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Stripe - Shared Account
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
# AI Labs Operative $4.90/month
STRIPE_OPERATIVE_PRICE_ID=price_xxxxx
# Campus + AI Labs Creator $9.90/month  
STRIPE_PRO_PRICE_ID=price_xxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_FREE=5
RATE_LIMIT_MAX_OPERATIVE=20
RATE_LIMIT_MAX_PRO=50

# Socket.io
SOCKET_CORS_ORIGIN=https://ai.yokaizencampus.com,http://localhost:7791

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Security / CORS
CORS_ORIGIN=https://ai.yokaizencampus.com,http://localhost:7791
ENCRYPTION_KEY=your-32-byte-encryption-key

# BullMQ/Job Queue
BULLMQ_REDIS_URL=redis://localhost:6379

# Pollinations (Free image gen fallback)
POLLINATIONS_API_URL=https://image.pollinations.ai/prompt

# Admin
ADMIN_EMAIL=admin@yokaizen.com
