# ============================================
# Yokaizen Campus Backend Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/yokaizen_campus?schema=public"

# ============================================
# Redis Configuration
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# ============================================
# AI Provider Configuration
# ============================================
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Google AI (Gemini)
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# OpenRouter (for DeepSeek and other models)
OPENROUTER_API_KEY="sk-or-your-openrouter-api-key"

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Price IDs (create these in Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID="price_monthly_id"
STRIPE_PRO_YEARLY_PRICE_ID="price_yearly_id"
STRIPE_CREDITS_SMALL_PRICE_ID="price_credits_small"
STRIPE_CREDITS_MEDIUM_PRICE_ID="price_credits_medium"
STRIPE_CREDITS_LARGE_PRICE_ID="price_credits_large"

# ============================================
# Feature Flags
# ============================================
# Enable mock AI mode (no API keys required for testing)
ENABLE_MOCK_AI=true

# Enable content filtering
ENABLE_CONTENT_FILTER=true

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# ============================================
# Credit Costs (per operation)
# ============================================
CREDIT_COST_SCOUT=5
CREDIT_COST_ARCHITECT=15
CREDIT_COST_CRITIC=10
CREDIT_COST_ETHICIST=12
CREDIT_COST_SYNTHESIZER=20
CREDIT_COST_ORACLE=25
CREDIT_COST_COMMANDER=30
CREDIT_COST_DEBUGGER=10
CREDIT_COST_CREATIVE=15
CREDIT_COST_ANALYST=12
CREDIT_COST_GRAPH_GENERATION=50
CREDIT_COST_AUDIT=20

# ============================================
# Rate Limiting Configuration
# ============================================
# Requests per minute
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=20
RATE_LIMIT_AI=30
RATE_LIMIT_GRAPH_SYNC=60
RATE_LIMIT_CLASSROOM_EVENTS=120
RATE_LIMIT_GRANTS=10
RATE_LIMIT_AR_SCAN=30

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ============================================
# Admin Configuration
# ============================================
# Initial admin email (created on first startup)
ADMIN_EMAIL="admin@yokaizen.com"
ADMIN_PASSWORD="change-this-password"

# ============================================
# Email Configuration (optional)
# ============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM="Yokaizen Campus <noreply@yokaizen.com>"

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ============================================
# Sentry Configuration (optional)
# ============================================
# SENTRY_DSN=https://your-sentry-dsn
