# ============================================
# Yokaizen Campus Backend - Production Config
# ============================================
# Copy to .env and update with real credentials

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=7789

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://yokaizen_campus:YOUR_DB_PASSWORD@localhost:5432/yokaizen_campus?schema=public"

# ============================================
# Redis Configuration
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET="GENERATE_A_SECURE_32_CHAR_SECRET_KEY_HERE"
JWT_REFRESH_SECRET="GENERATE_ANOTHER_SECURE_32_CHAR_KEY"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# CORS Configuration
# ============================================
# Allow frontend origin
CORS_ORIGINS="https://campus.yokaizen.com,http://localhost:7787"

# ============================================
# AI Provider Configuration
# ============================================
# OpenAI (optional)
OPENAI_API_KEY=""

# Anthropic (optional)
ANTHROPIC_API_KEY=""

# Google AI (Gemini) - Primary
GOOGLE_AI_API_KEY="YOUR_GEMINI_API_KEY"

# OpenRouter (for DeepSeek and other models)
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY"

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY="sk_live_YOUR_STRIPE_SECRET_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"
STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_PUBLISHABLE_KEY"

# Price IDs (create these in Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID="price_monthly_id"
STRIPE_PRO_YEARLY_PRICE_ID="price_yearly_id"
STRIPE_CREDITS_100_PRICE_ID="price_credits_100"
STRIPE_CREDITS_500_PRICE_ID="price_credits_500"
STRIPE_CREDITS_1000_PRICE_ID="price_credits_1000"

# ============================================
# Feature Flags
# ============================================
# Disable mock AI in production
ENABLE_MOCK_AI=false

# Enable content filtering
ENABLE_CONTENT_FILTER=true

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL="admin@yokaizen.com"
ADMIN_PASSWORD="CHANGE_THIS_SECURE_ADMIN_PASSWORD"

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=combined
